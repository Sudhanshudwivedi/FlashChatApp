<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.example.sudhanshu.flash.SettingActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/setting_display "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Display Name"
        android:textSize="24sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/setting_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_display "
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Hi There,I am using Flash Chat App"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/setting_imagebtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/setting_statusbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="@color/white"
        android:text="Change Image"
        android:textColor="@color/background_color" />

    <Button
        android:id="@+id/setting_statusbtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="#ff2500"
        android:text="Change Status"
        android:textColor="@android:color/white" />
</android.widget.RelativeLayout>
